{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": ["node"],
    "strictPropertyInitialization": false,
    "paths": {
      "@home/*": ["libs/feature/src/lib/home/*"],
      "@kids/*": ["src/app/kids/*"],
      "@latest/*": ["src/app/latest/*"],
      "@material/module": ["src/app/material.module"],
      "@movies/*": ["src/app/movies/*"],
      "@my-list/*": ["src/app/my-list/*"],
      "@page-not-found/*": ["src/app/page-not-found/*"],
      "@referfriends/*": ["src/app/referfriends/*"],
      "@shared/netflicks": ["libs/shared/src/index.ts"],
      "@tv-shows/*": ["src/app/tv-shows/*"],
      "@libs": ["libs/src/index.ts"],
      "@libs/feature": ["libs/feature/src/index.ts"]
    },
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
